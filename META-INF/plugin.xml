<idea-plugin>
  <id>fossil-scm4idea</id>
  <name>Fossil Integration</name>
  <version>0.0.1</version>
  <vendor url="https://github.com/yasuoohno/fossil-scm4idea" email="yasuo.ohno@gmail.com">Yasuo Ono</vendor>
  <description><![CDATA[
      Allows working with <a href='http://www.fossil-scm.org/'>Fossil</a> - open-source distributed version control.

      Supported features:
      <ul>
      <li>local changes</li>
      <li>commit/push</li>
      <li>update (pull + checkout)</li>
      <li>file history</li>
      <li>file annotation</li>
      <li>show diff</li>
      <li>run web UI</li>
      <li>checkout (clone + open)</li>
      <li>clone repository</li>
      <li>open repository</li>
      <li>create repository</li>
      </ul>

  ]]></description>
  <!-- <description><![CDATA[
      Enter short description for your plugin here.<br>
      <small>most HTML tags may be used</small>
      ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <small>most HTML tags may be used</small>
      ]]>
  </change-notes>       -->

  <!-- please see http://confluence.jetbrains.net/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="193.3793.14"/>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.vcs</depends>

  <application-components>
  </application-components>

  <project-components>
  </project-components>

  <actions>
      <group id="FossilFilePopupGroup" popup="true" class="org.github.irengrig.fossil4idea.actions.FossilGroup" text="Fossil">
          <action class="org.github.irengrig.fossil4idea.actions.RunUIAction" id="Fossil.UI" text="Run Web UI"/>
          <action class="org.github.irengrig.fossil4idea.actions.CloneAction" id="Fossil.Clone"
                  text="Clone Repository..."/>
          <action class="org.github.irengrig.fossil4idea.actions.OpenAction" id="Fossil.Open"
                  text="Open Repository..."/>
          <action class="org.github.irengrig.fossil4idea.actions.PushAction" id="Fossil.Push" text="Push..."/>
          <add-to-group group-id="VcsGroup" anchor="last"/>
          <add-to-group group-id="VcsGlobalGroup" anchor="after" relative-to-action="Vcs.Specific"/>
      </group>

      <action id="Fossil.Init" class="org.github.irengrig.fossil4idea.actions.InitAction" text="Create Fossil Repository...">
          <add-to-group group-id="Vcs.Import"/>
      </action>
  </actions>

  <extensions defaultExtensionNs="com.intellij">
    <projectService serviceImplementation="org.github.irengrig.fossil4idea.FossilConfiguration"/>
    <checkoutProvider implementation="org.github.irengrig.fossil4idea.checkout.FossilCheckoutProvider"/>
    <vcs id="fossil" displayName="Fossil" vcsClass="org.github.irengrig.fossil4idea.FossilVcs" name="fossil"/>
  </extensions>
</idea-plugin>
